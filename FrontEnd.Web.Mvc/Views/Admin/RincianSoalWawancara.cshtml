@model RincianSoalWawancaraModel
@{
    ViewBag.Title = $"Rincian {Model.JudulSoal}";
}

<div class="row">
    <div class="col-md-8">
        @if (Model.ListPertanyaanWawancara.Count() < 1)
        {
            <div>Kosong</div>
        }
        else
        {
            int i = 0;
            foreach (var pertanyaan in Model.ListPertanyaanWawancara)
            {
                <div class="card shadow mb-4">
                    <a href="#pertanyaan-@(i+1)" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">Pertanyaan @(i+1)</h6>
                    </a>
                    <div class="collapse show" id="pertanyaan-@(i+1)">
                        <div class="card-body">
                            <div class="border mb-1">@Html.Raw(pertanyaan.Isi)</div>
                            <div class="fa-pull-right mb-2">
                                <button data-target="#ModalUbahPertanyaanAkademik" data-toggle="modal" class="btn btn-warning">
                                    Ubah
                                </button>
                                <form asp-controller="Admin" asp-action="HapusPertanyaanWawancara" asp-route-id="@pertanyaan.Id" asp-route-soalId="@Model.Id"
                                      method="post" class="delete-button mt-1">
                                    <button type="submit" onclick="return confirm('Apa anda yakin ingin menghapus pertanyaan nomor @(i+1)?')"
                                            class="btn btn-danger">
                                        Hapus
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                i++;
            }
        }
    </div>
    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Keterangan</h6>
            </div>
            <div class="card-body">
                <div><label asp-for="JudulSoal"></label> : <a>@Model.JudulSoal</a></div>
                <div><label asp-for="Jalur"></label> : <a>@Model.Jalur</a></div>
                <div><label asp-for="Target"></label> : <a>@Model.Target</a></div>
                <div> <label asp-for="JumlahPertanyaan"></label> : <a>@Model.JumlahPertanyaan</a></div>
                <div><label asp-for="Deskripsi"></label> : <a>@Model.Deskripsi</a></div>

                <button data-target="#ModalTambahPertanyaanAkademik" data-toggle="modal" class="btn btn-success btn-icon-split">
                    <span class="icon text-white"><i class="fas fa-pen"></i></span>
                    <span class="text">Tambah Pertanyaan</span>
                </button>
            </div>
        </div>
    </div>
</div>
@*Scroll to top*@
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
@*Modal*@
<div id="ModalTambahPertanyaanAkademik" data-keyboard="false" data-backdrop="static" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Tambah Soal Akademik</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-controller="Admin" asp-action="TambahPertanyaanWawancara" method="post">
                    <div>
                        <input hidden asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CrudPertanyaanWawancara.Isi" class="col-form-label"></label>
                        <textarea id="editor" asp-for="CrudPertanyaanWawancara.Isi" class="form-control" placeholder="Pertanyaan"></textarea>
                    </div>
                    <div class="my-1 fa-pull-right">
                        <button class="btn border" data-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-primary">Tambah</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="ModalUbahPertanyaanAkademik" data-keyboard="false" data-backdrop="static" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Tambah Soal Akademik</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-controller="Admin" asp-action="UbahPertanyaanWawancara" method="post">
                    <div class="form-group">
                        <label asp-for="CrudPertanyaanWawancara.Isi" class="col-form-label"></label>
                        <span class="text-danger">*</span>
                        <input asp-for="CrudPertanyaanWawancara.Isi" class="form-control" placeholder="Pertanyaan" />
                    </div>
                    <div class="my-1 fa-pull-right">
                        <button class="btn border" data-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-primary">Tambah</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/15.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
    <script>
    @if (ViewBag.Pesan != null)
    {
        @: alert("@ViewBag.Pesan");
    }

    //Ajax ubah soal
    </script>
}