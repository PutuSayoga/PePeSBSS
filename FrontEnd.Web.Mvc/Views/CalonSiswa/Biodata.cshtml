@model BiodataModel
@{
    ViewBag.Title = "Biodata";
}

@section Report{
    <button onclick="window.open('/Print/BiodataCalonSiswa', 'newwindow', 'width=800,height=500'); return false;"
            class="d-none d-inline-block btn btn-success shadow-sm">
        <i class="fas fa-print fa-sm text-white-50"></i> Cetak Biodata
    </button>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <ul class="nav navbar nav-pills">
            <li class="nav-item active"><a class="nav-link active" data-toggle="tab" href="#DataDiri">Data Diri</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#DataAkademikTerakhir">Akademik terakhir</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#DataPrestasi">Prestasi</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#DataRapor">Rapor</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#DataOrangTua">Orang Tua/Wali</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#DataPenunjang">Penunjang</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div id="DataDiri" class="tab-pane fade active show">
                @{await Html.RenderPartialAsync("DataDiriShared", Model.DataDiri);}
            </div>
            <div id="DataAkademikTerakhir" class="tab-pane fade">
                @{await Html.RenderPartialAsync("DataAkademikShared", Model.DataAkademikTerakhir);}
            </div>
            <div id="DataPrestasi" class="tab-pane fade">
                @{await Html.RenderPartialAsync("DataPrestasiShared", Model.DataPrestasi);}
            </div>
            <div id="DataRapor" class="tab-pane fade">
                @{await Html.RenderPartialAsync("DataRaporShared", Model.DataRapor);}
            </div>
            <div id="DataOrangTua" class="tab-pane fade">
                @{await Html.RenderPartialAsync("DataOrangTuaShared", Model.DataOrangTua);}
            </div>
            <div id="DataPenunjang" class="tab-pane fade">
                @{await Html.RenderPartialAsync("DataPenunjangShared", Model.DataPenunjang);}
            </div>
        </div>
    </div>
</div>

