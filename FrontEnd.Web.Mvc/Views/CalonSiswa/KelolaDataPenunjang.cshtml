@model KelolaDataPenunjangModel
@{ 
    ViewBag.Title = "Data Penunjang";
}
    <div class="col-11">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Form data penunjang</h6>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="alert-danger text-danger mb-4"></div>
                <form asp-controller="CalonSiswa" asp-action="SimpanBiodataDiri" method="post">
                    <div class="form-group row">
                        <div class="col-md-3 col-form-label">
                            <label asp-for="Pembiaya"></label>
                            <span class="text-danger">*</span>
                        </div>
                        <div class="col-md">
                            <input asp-for="Pembiaya" class="form-control" placeholder="Orang yang membiayai keperluan sekolah" />
                            <span asp-validation-for="Pembiaya" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 col-form-label">
                            <label asp-for="StatusTempatTinggal"></label>
                        </div>
                        <div class="col-md-3">
                            <select asp-for="StatusTempatTinggal" class="custom-select form-control mr-sm-2">
                                <option value="Rumah sendiri" selected>Rumah sendiri</option>
                                <option value="Rumah Kos">Rumah kos</option>
                                <option value="Kontrakan">Rumah Kontrak</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 col-form-label">
                            <label asp-for="DayaListrik"></label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="DayaListrik" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 col-form-label">
                            <label asp-for="JarakTempuh"></label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="JarakTempuh" class="form-control" placeholder="" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 col-form-label">
                            <label asp-for="WaktuTempuh"></label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="WaktuTempuh" class="form-control" placeholder="" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 col-form-label">
                            <label asp-for="Transportasi"></label>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="Transportasi" class="form-control" placeholder="Transportasi utama yang dipakai ke sekolah" />
                        </div>
                    </div>
                    <div class="my-1 fa-pull-right">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>