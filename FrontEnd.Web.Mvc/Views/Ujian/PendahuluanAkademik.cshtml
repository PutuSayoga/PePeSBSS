@model CrudSoalAkademik
@if (Model == null)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Peraturan & Keterangan</h6>
        </div>
        <div class="card-body">
            <h3 class="text-dark">
                Seleksi ini sudah dikerjakan
            </h3>
            <a asp-controller="Ujian" asp-action="Index" class="btn btn-secondary">Kembali</a>
        </div>
    </div>
}
else
{
    <h1 class="mb-3">@Model.Judul</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Peraturan & Keterangan</h6>
        </div>
        <div class="card-body">
            <table class="table-borderless">
                <tr>
                    <td><label asp-for="BatasWaktu"></label></td>
                    <td><label> : </label></td>
                    <td><label>@Model.BatasWaktu menit</label></td>
                </tr>
                <tr>
                    <td><label asp-for="JumlahPertanyaan"></label></td>
                    <td><label> : </label></td>
                    <td><label>@Model.JumlahPertanyaan pertanyaan</label></td>
                </tr>
                <tr>
                    <td><label asp-for="Kategori"></label></td>
                    <td><label> : </label></td>
                    <td><label>@Model.Kategori</label></td>
                </tr>
                <tr>
                    <td><label asp-for="Deskripsi"></label></td>
                    <td><label> : </label></td>
                    <td><label>@Model.Deskripsi</label></td>
                </tr>
            </table>
            <a asp-controller="Ujian" asp-action="MulaiMengerjakanAkademik" asp-route-soalId="@Model.Id" 
               asp-route-kategori="@Model.Kategori" class="btn btn-primary">
                Mulai Mengerjakan
            </a>
        </div>
    </div>
}
