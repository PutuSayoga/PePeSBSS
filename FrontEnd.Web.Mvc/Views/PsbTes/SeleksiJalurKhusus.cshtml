@model SeleksiJalurKhususModel
@{
    ViewBag.Title = "Penentuan Jalur Khusus";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Seleksi jalur khusus</h6>
    </div>
    <div class="card-body">
        @if (Model.ListJalurKhusus.Count() < 1)
        {
            @: kosong
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0" cellpadding="5">
                    <thead class="table-warning text-dark">
                        <tr>
                            <th>No Pendaftaran  </th>
                            <th>Nama Lengkap    </th>
                            <th>MIPA            </th>
                            <th>IPS             </th>
                            <th>TPA             </th>
                            <th>Skor Akhir      </th>
                            <th>Keterangan      </th>
                            <th>Tes Wawancara   </th>
                            <th>Aksi            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var akun in Model.ListJalurKhusus)
                        {
                            <tr>
                                <td>@akun.NoPendaftaran</td>
                                <td>@akun.NamaLengkap</td>
                                <td>@akun.NilaiMipa</td>
                                <td>@akun.NilaiIps</td>
                                <td>@akun.NilaiTpa</td>
                                <td>@akun.SkorAkhir</td>
                                @if (akun.Keterangan.Equals("Lolos"))
                                {
                                    <td class="text-center">
                                        <p class="card bg-success text-white">@akun.Keterangan</p>
                                    </td>
                                }
                                else if (akun.Keterangan.Equals("Tidak Lolos"))
                                {
                                    <td class="text-center">
                                        <p class="card bg-danger text-white">@akun.Keterangan</p>
                                    </td>
                                }
                                <td class="text-center"><button class="btn btn-info">Lihat</button></td>
                                <td>
                                    <form asp-controller="PsbTes" asp-action="SeleksiJalurKhusus" asp-route-id="@akun.Id">
                                        <button class="btn btn-primary" type="submit">Perbarui Status</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>