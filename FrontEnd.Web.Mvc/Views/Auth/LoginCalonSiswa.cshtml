@model LoginCalonSiswaModel
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2><strong>Login Page </strong></h2><br />
                <form asp-controller="Auth" asp-action="LoginCalonSiswa" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
                    <div class="form-group">
                        <label asp-for="NoPendaftaran"></label>
                        <input type="text" class="form-control" asp-for="NoPendaftaran" placeholder="Enter user name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    </div>
                    <div class="form-check">
                        <button class="btn btn-info" type="reset">Reset</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>