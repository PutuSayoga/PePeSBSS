@model LoginStaffModel
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2><strong>Login Page </strong></h2><br />
                <form asp-controller="Auth" asp-action="LoginStaff" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <div>
                            <input class="form-control" asp-for="Username" placeholder="Enter user name" />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Enter user name" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role"></label>
                        <div>
                            <select class="form-control" asp-for="Role">
                                <option value="Admin">Admin</option>
                                <option value="Waka Kesiswaan">Waka Kesiswaan</option>
                                <option value="Tata Usaha">Tata Usaha</option>
                                <option value="PSB Pendaftaran">PSB Pendaftaran</option>
                                <option value="PSB Tes">PSB Tes</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Role"></span>
                        </div>
                    </div>
                    <div class="form-check">
                        <button class="btn btn-info" type="reset">Reset</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>