@model GlobalErrorHandlerModel

<div class="container-fluid">

    <div class="text-center">
        <div class="error mx-auto" data-text="@Model.StatusCode">@Model.StatusCode</div>
        <p class="lead text-gray-800 mb-5">@Model.Message</p>
        <p class="text-gray-500 mb-0">@Model.ExtraMessage</p>
        <a asp-controller="Auth" asp-action="Index">&larr; Kembali ke halaman utama</a>
    </div>

</div>